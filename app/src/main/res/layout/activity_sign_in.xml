<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
>

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="0dp"
        android:layout_height="172dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="262dp"
        android:layout_height="58dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:srcCompat="@drawable/fon2" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="262dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/fon2" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="234dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:background="@null"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="@color/black"
        android:textColorLink="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="232dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:singleLine="true"
        android:backgroundTint="@color/black"
        android:textColorLink="@color/black"
        android:textColorHighlight="@color/black"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <TextView
        android:id="@+id/login"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="52dp"
        android:text="Логин"
        android:textAlignment="center"
        android:textColor="#003274"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/login2"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/login2"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:text="Пароль"
        android:textAlignment="center"
        android:textColor="#003274"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_sign_in"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_sign_in"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="108dp"
        android:background="#00FFFFFF"
        android:onClick="onClickQ"
        android:scaleType="fitXY"


        android:src="@drawable/register_sign"
        app:layout_constraintBottom_toTopOf="@+id/Google"
        app:layout_constraintEnd_toStartOf="@+id/btn_registration"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btn_registration"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_marginTop="34dp"
        android:background="#00FFFFFF"
        android:onClick="onClickQ"
        android:scaleType="fitXY"
        android:src="@drawable/register_sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <ImageButton
        android:id="@+id/Google"
        android:layout_width="270dp"
        android:layout_height="53dp"
        android:layout_marginTop="108dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/sigh_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_registration" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="91dp"
        android:layout_height="33dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Авторизация"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_sign_in"
        app:layout_constraintEnd_toEndOf="@+id/btn_sign_in"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/btn_sign_in"
        app:layout_constraintTop_toTopOf="@+id/btn_sign_in"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="91dp"
        android:layout_height="33dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Регистрация"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_registration"
        app:layout_constraintEnd_toEndOf="@+id/btn_registration"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/btn_registration"
        app:layout_constraintTop_toTopOf="@+id/btn_registration"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="119dp"
        android:layout_height="49dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Вход через Google"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Google"
        app:layout_constraintEnd_toEndOf="@+id/Google"
        app:layout_constraintTop_toTopOf="@+id/Google"
        app:layout_constraintVertical_bias="0.423" />


</androidx.constraintlayout.widget.ConstraintLayout>